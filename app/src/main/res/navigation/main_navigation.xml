<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.coolya.i1.ui.main.ui.MainFragment"
        >
        <action
            android:id="@+id/action_mainFragment_to_createTodoFragment"
            app:destination="@id/createTodoFragment" />
        <action
            android:id="@+id/action_mainFragment_to_progressFragment"
            app:destination="@id/progressFragment"
            />
    </fragment>
    <dialog
        android:id="@+id/createTodoFragment"
        android:name="com.coolya.i1.ui.create.ui.CreateTodoFragment"
        />
    <fragment
        android:id="@+id/progressFragment"
        android:name="com.coolya.i1.ui.progress.ui.ProgressFragment"
        />
</navigation>